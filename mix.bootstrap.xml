<?xml version="1.0" encoding="UTF-8"?>
<project name="mix.boot" default="boot">

  <!-- ==================================================================
       =                      Bootstrap 
       ================================================================== -->

  <property name="mix.boot.revision" value="47"/>

  <target name="boot">

    <mkdir dir="lib"/>

    <exec executable="svn" dir="lib">
      <arg value="checkout"/>
      <arg value="--revision"/>
      <arg value="${mix.boot.revision}"/>
      <arg value="https://engrm.com/svn/mix/src/boot"/>
      <arg value="_boot"/>
    </exec>

    <ant antfile="lib/_boot/ant/build.xml"/>

  </target>

  <target name="boot.latest">

    <mkdir dir="lib"/>

    <exec executable="svn" dir="lib">
      <arg value="checkout"/>
      <arg value="https://engrm.com/svn/mix/src/boot"/>
      <arg value="_boot"/>
    </exec>

    <ant antfile="lib/_boot/ant/build.xml" target="boot.latest"/>

  </target>
</project>
