<?xml version="1.0" encoding="UTF-8"?>
<project>
  <target name="javadoc.preset">
    <presetdef name="javadoc-linked">
      <javadoc>
        <link packagelistLoc="${mix.cache.package.list}/sun/jdk/1.4.2" href="${mix.javadoc.link.sun.jdk.1.4.2}" offline="true"/>
        <link packagelistLoc="${mix.cache.package.list}/apache/log4j/1.2.9" href="${mix.javadoc.link.apache.log4j.1.2.9}" offline="true"/>
        <link packagelistLoc="${mix.cache.package.list}/junit/junit/3.8.1" href="${mix.javadoc.link.junit.junit.3.8.1}" offline="true"/>
        <link packagelistLoc="${mix.cache.package.list}/agtrz/i18n/latest.integration" href="${mix.javadoc.link.agtrz.i18n.latest.integration}" offline="true"/>
        <link packagelistLoc="${mix.cache.package.list}/agtrz/todo/latest.integration" href="${mix.javadoc.link.agtrz.todo.latest.integration}" offline="true"/>
        <link packagelistLoc="${mix.cache.package.list}/agtrz/swag/latest.integration" href="${mix.javadoc.link.agtrz.swag.latest.integration}" offline="true"/>
        <link packagelistLoc="${mix.cache.package.list}/agtrz/sheaf/latest.integration" href="${mix.javadoc.link.agtrz.sheaf.latest.integration}" offline="true"/>
      </javadoc>
    </presetdef>
  </target>
  <target unless="javadoc.package.lists.available" depends="javadoc.package.lists.available" name="javadoc.cache.package.lists">
    <mkdir dir="${mix.cache.package.list}/sun/jdk/1.4.2"/>
    <get ignoreerrors="true" dest="${mix.cache.package.list}/sun/jdk/1.4.2/package-list" src="${mix.javadoc.link.sun.jdk.1.4.2}/package-list"/>
    <mkdir dir="${mix.cache.package.list}/apache/log4j/1.2.9"/>
    <get ignoreerrors="true" dest="${mix.cache.package.list}/apache/log4j/1.2.9/package-list" src="${mix.javadoc.link.apache.log4j.1.2.9}/package-list"/>
    <mkdir dir="${mix.cache.package.list}/junit/junit/3.8.1"/>
    <get ignoreerrors="true" dest="${mix.cache.package.list}/junit/junit/3.8.1/package-list" src="${mix.javadoc.link.junit.junit.3.8.1}/package-list"/>
    <mkdir dir="${mix.cache.package.list}/agtrz/i18n/latest.integration"/>
    <get ignoreerrors="true" dest="${mix.cache.package.list}/agtrz/i18n/latest.integration/package-list" src="${mix.javadoc.link.agtrz.i18n.latest.integration}/package-list"/>
    <mkdir dir="${mix.cache.package.list}/agtrz/todo/latest.integration"/>
    <get ignoreerrors="true" dest="${mix.cache.package.list}/agtrz/todo/latest.integration/package-list" src="${mix.javadoc.link.agtrz.todo.latest.integration}/package-list"/>
    <mkdir dir="${mix.cache.package.list}/agtrz/swag/latest.integration"/>
    <get ignoreerrors="true" dest="${mix.cache.package.list}/agtrz/swag/latest.integration/package-list" src="${mix.javadoc.link.agtrz.swag.latest.integration}/package-list"/>
    <mkdir dir="${mix.cache.package.list}/agtrz/sheaf/latest.integration"/>
    <get ignoreerrors="true" dest="${mix.cache.package.list}/agtrz/sheaf/latest.integration/package-list" src="${mix.javadoc.link.agtrz.sheaf.latest.integration}/package-list"/>
  </target>
  <target name="javadoc.package.lists.available">
    <condition property="javadoc.package.lists.available">
      <and>
        <available file="${mix.cache.package.list}/sun/jdk/1.4.2/package-list"/>
        <available file="${mix.cache.package.list}/apache/log4j/1.2.9/package-list"/>
        <available file="${mix.cache.package.list}/junit/junit/3.8.1/package-list"/>
        <available file="${mix.cache.package.list}/agtrz/i18n/latest.integration/package-list"/>
        <available file="${mix.cache.package.list}/agtrz/todo/latest.integration/package-list"/>
        <available file="${mix.cache.package.list}/agtrz/swag/latest.integration/package-list"/>
        <available file="${mix.cache.package.list}/agtrz/sheaf/latest.integration/package-list"/>
      </and>
    </condition>
  </target>
</project>
